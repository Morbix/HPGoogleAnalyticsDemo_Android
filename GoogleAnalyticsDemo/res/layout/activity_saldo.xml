<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:minHeight="20dp"
                android:id="@+id/tableRow"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Saldo"
                android:id="@+id/textView"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"/>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:minHeight="20dp"
                android:id="@+id/tableRow"
                android:layout_gravity="center"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Saldo em 27/10/2013"
                android:id="@+id/textView2"
                android:layout_gravity="left|center_vertical"
                android:textSize="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Saldo: R$ 1.000,00"
                android:id="@+id/textView3"
                android:layout_gravity="left|center_vertical"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bloqueado: R$ 0,00"
                android:id="@+id/textView4"
                android:layout_gravity="left|center_vertical"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Limite: R$ 5.000,00"
                android:id="@+id/textView5"
                android:layout_gravity="left|center_vertical"/>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:minHeight="20dp"
                android:id="@+id/tableRow2"
                android:layout_gravity="left|center_vertical"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Juros e Cheque Especial"
                android:id="@+id/textView7"
                android:layout_gravity="left|center_vertical"
                android:textSize="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Taxa: 7,50%"
                android:id="@+id/textView8"
                android:layout_gravity="left|center_vertical"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vencimento: 10/11/2013"
                android:id="@+id/textView10"
                android:layout_gravity="left|center_vertical"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CET (Anual): 152,00%"
                android:id="@+id/textView11"
                android:layout_gravity="left|center_vertical"/>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:minHeight="20dp"
                android:id="@+id/tableRow3"
                android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

</RelativeLayout>